# for decrement
snippet ford
	var ${1:i}, ${3:item};

	for ($1 =  ${2:array}.length - 1; $1 >= 0; $1--) {
		$3 = $2[$1];
		${4}
	}
# while decrement
snippet whiled
	var ${1:i} = ${2:array}.length;
	var ${3:item};

	while (${1:i}--) {
		$3 = $2[$1];
		${4}
	}
