[color]
  diff = auto
  status = auto
  interactive = auto
  branch = auto
  ui = true

[alias]
  a = add
  ap = add -p
  aa = add -A
  c = commit --verbose
  p = push
  d = !git diff --color-words | less -RS
  cm = commit -am
  ac = !git add -A && git commit -a --verbose
  acm = !git add -A && git commit -am
  co = checkout
  st = status -sb
  br = branch
  bra = branch -a
  me = merge --no-ff
  amend = commit -a --amend
  reb = rebase -p
  ls = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  alias = config --get-regexp alias
  diffup = diff @{u}
  nc = shortlog -s -n --all
  today = log --since=midnight --author=\"$(git config user.name)\" --oneline
  yesterday = !git log --graph --all --since=\"yesterday.midnight\" --until=\"midnight\" --author=\"$(git config user.name)\" --oneline

[credential]
  helper = osxkeychain

[core]
  excludesfile = ~/.gitignore

[advice]
  statusHints = false
  pushNonFastForward = false

[merge]
  stat = true
  tool = opendiff

[push]
  default = current

[mergetool]
  keepBackup = false
  keepTemporaries = false

[include]
  path = .gitconfig.local
